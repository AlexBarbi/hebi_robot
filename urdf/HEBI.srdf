<?xml version="1.0"?>
<robot name="simple_robot">

  <!-- Virtual Joint: Used to attach the robot to the world -->
  <virtual_joint name="world_joint" type="fixed" parent_frame="world" child_link="base_link" />

  <!-- Disable Collisions -->
  <!-- Base link collisions -->
  <disable_collisions link1="base_link" link2="lf_shoulder" reason="Adjacent"/>
  <disable_collisions link1="base_link" link2="lr_shoulder" reason="Adjacent"/>
  <disable_collisions link1="base_link" link2="rf_shoulder" reason="Adjacent"/>
  <disable_collisions link1="base_link" link2="rr_shoulder" reason="Adjacent"/>

  <!-- Leg collisions -->
  <!-- Left Front Leg -->
  <disable_collisions link1="lf_shoulder" link2="lf_leg" reason="Adjacent"/>
  <disable_collisions link1="lf_leg" link2="lf_leg_ext" reason="Adjacent"/>
  <disable_collisions link1="lf_leg_ext" link2="lf_foot_r" reason="Adjacent"/>
  <disable_collisions link1="lf_foot_r" link2="lf_foot_mid" reason="Adjacent"/>
  <disable_collisions link1="lf_foot_mid" link2="lf_foot_mid_2" reason="Adjacent"/>
  <disable_collisions link1="lf_foot_mid_2" link2="lf_foot" reason="Adjacent"/>
  <disable_collisions link1="lf_foot" link2="lf_wheel_front" reason="Adjacent"/>
  <disable_collisions link1="lf_foot" link2="lf_wheel_rear" reason="Adjacent"/>

  <!-- Left Rear Leg -->
  <disable_collisions link1="lr_shoulder" link2="lr_leg" reason="Adjacent"/>
  <disable_collisions link1="lr_leg" link2="lr_leg_ext" reason="Adjacent"/>
  <disable_collisions link1="lr_leg_ext" link2="lr_foot_r" reason="Adjacent"/>
  <disable_collisions link1="lr_foot_r" link2="lr_foot_mid" reason="Adjacent"/>
  <disable_collisions link1="lr_foot_mid" link2="lr_foot_mid_2" reason="Adjacent"/>
  <disable_collisions link1="lr_foot_mid_2" link2="lr_foot" reason="Adjacent"/>
  <disable_collisions link1="lr_foot" link2="lr_wheel_front" reason="Adjacent"/>
  <disable_collisions link1="lr_foot" link2="lr_wheel_rear" reason="Adjacent"/>

  <!-- Right Front Leg -->
  <disable_collisions link1="rf_shoulder" link2="rf_leg" reason="Adjacent"/>
  <disable_collisions link1="rf_leg" link2="rf_leg_ext" reason="Adjacent"/>
  <disable_collisions link1="rf_leg_ext" link2="rf_foot_r" reason="Adjacent"/>
  <disable_collisions link1="rf_foot_r" link2="rf_foot_mid" reason="Adjacent"/>
  <disable_collisions link1="rf_foot_mid" link2="rf_foot_mid_2" reason="Adjacent"/>
  <disable_collisions link1="rf_foot_mid_2" link2="rf_foot" reason="Adjacent"/>
  <disable_collisions link1="rf_foot" link2="rf_wheel_front" reason="Adjacent"/>
  <disable_collisions link1="rf_foot" link2="rf_wheel_rear" reason="Adjacent"/>

  <!-- Right Rear Leg -->
  <disable_collisions link1="rr_shoulder" link2="rr_leg" reason="Adjacent"/>
  <disable_collisions link1="rr_leg" link2="rr_leg_ext" reason="Adjacent"/>
  <disable_collisions link1="rr_leg_ext" link2="rr_foot_r" reason="Adjacent"/>
  <disable_collisions link1="rr_foot_r" link2="rr_foot_mid" reason="Adjacent"/>
  <disable_collisions link1="rr_foot_mid" link2="rr_foot_mid_2" reason="Adjacent"/>
  <disable_collisions link1="rr_foot_mid_2" link2="rr_foot" reason="Adjacent"/>
  <disable_collisions link1="rr_foot" link2="rr_wheel_front" reason="Adjacent"/>
  <disable_collisions link1="rr_foot" link2="rr_wheel_rear" reason="Adjacent"/>

  <!-- Inter-leg collisions -->
  <disable_collisions link1="lf_leg" link2="rf_leg" reason="Default"/>
  <disable_collisions link1="lf_leg" link2="lr_leg" reason="Default"/>
  <disable_collisions link1="lf_leg" link2="rr_leg" reason="Default"/>
  <disable_collisions link1="rf_leg" link2="lr_leg" reason="Default"/>
  <disable_collisions link1="rf_leg" link2="rr_leg" reason="Default"/>
  <disable_collisions link1="lr_leg" link2="rr_leg" reason="Default"/>

  <!-- End Effectors -->
  <end_effector name="lf_foot" parent_link="lf_foot" group="legs" parent_group="legs"/>
  <end_effector name="rf_foot" parent_link="rf_foot" group="legs" parent_group="legs"/>
  <end_effector name="lr_foot" parent_link="lr_foot" group="legs" parent_group="legs"/>
  <end_effector name="rr_foot" parent_link="rr_foot" group="legs" parent_group="legs"/>

  <!-- Groups -->
  <group name="legs">
    <chain base_link="base_link" tip_link="lf_foot"/>
    <chain base_link="base_link" tip_link="rf_foot"/>
    <chain base_link="base_link" tip_link="lr_foot"/>
    <chain base_link="base_link" tip_link="rr_foot"/>
  </group>

  <group name="left_legs">
    <chain base_link="base_link" tip_link="lf_foot"/>
    <chain base_link="base_link" tip_link="lr_foot"/>
  </group>

  <group name="right_legs">
    <chain base_link="base_link" tip_link="rf_foot"/>
    <chain base_link="base_link" tip_link="rr_foot"/>
  </group>

  <group name="front_legs">
    <chain base_link="base_link" tip_link="lf_foot"/>
    <chain base_link="base_link" tip_link="rf_foot"/>
  </group>

  <group name="rear_legs">
    <chain base_link="base_link" tip_link="lr_foot"/>
    <chain base_link="base_link" tip_link="rr_foot"/>
  </group>

  <!-- Group States -->
  <group_state name="home" group="legs">
    <joint name="lf_shoulder1_joint" value="0"/>
    <joint name="lf_foot_joint_pitch" value="0"/>
    <joint name="lf_foot_joint_roll" value="0"/>
    <joint name="lf_suspention_ext_joint" value="0.0375"/>
    
    <joint name="rf_shoulder1_joint" value="0"/>
    <joint name="rf_foot_joint_pitch" value="0"/>
    <joint name="rf_foot_joint_roll" value="0"/>
    <joint name="rf_suspention_ext_joint" value="0.0375"/>
    
    <joint name="lr_shoulder1_joint" value="0"/>
    <joint name="lr_foot_joint_pitch" value="0"/>
    <joint name="lr_foot_joint_roll" value="0"/>
    <joint name="lr_suspention_ext_joint" value="0.0375"/>
    
    <joint name="rr_shoulder1_joint" value="0"/>
    <joint name="rr_foot_joint_pitch" value="0"/>
    <joint name="rr_foot_joint_roll" value="0"/>
    <joint name="rr_suspention_ext_joint" value="0.0375"/>
  </group_state>

  <!-- Passive Joints -->
  <passive_joint name="lf_wheel_front_joint"/>
  <passive_joint name="lf_wheel_rear_joint"/>
  <passive_joint name="rf_wheel_front_joint"/>
  <passive_joint name="rf_wheel_rear_joint"/>
  <passive_joint name="lr_wheel_front_joint"/>
  <passive_joint name="lr_wheel_rear_joint"/>
  <passive_joint name="rr_wheel_front_joint"/>
  <passive_joint name="rr_wheel_rear_joint"/>

</robot>