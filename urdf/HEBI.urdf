<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="simple_robot">

  <!-- Constants -->
  <xacro:property name="pi" value="3.141592653589793"/>

  <!-- Base -->
  <link name="world"/>
  <joint name="world_joint" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
    <origin rpy="0.0 0.0 0.0" xyz="0.0 0.0 0.0"/>
  </joint>

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://intro_robotics_labs/my_CAD/chassis-Body.stl" scale="0.01 0.01 0.01"/>
      </geometry>
      <origin xyz="-0.075 0 0" rpy="0 0 0"/>
      <material name="gray"><color rgba="0.5 0.5 0.5 1"/></material>
    </visual>
  </link>

  <!-- ================= MACRO: Leg ================= -->
  <xacro:macro name="leg" params="prefix x y">
    <!-- Shoulder -->
    <joint name="${prefix}_shoulder1_joint" type="revolute">
      <parent link="base_link"/>
      <child link="${prefix}_shoulder"/>
      <origin xyz="${x} ${y} 0" rpy="0 0 ${pi/2}"/>
      <axis xyz="0 1 0"/>
      <limit lower="${-pi/2}" upper="${pi/2}" effort="100" velocity="1.0"/>
      <dynamics damping="0.5" friction="0.2"/>
    </joint>

    <link name="${prefix}_shoulder">
      <visual>
        <geometry>
          <mesh filename="package://intro_robotics_labs/my_CAD/shoulder.stl" scale="0.01 0.01 0.01"/>
        </geometry>
        <origin xyz="0 0 0"/>
        <material name="black"><color rgba="0 0 0 1"/></material>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://intro_robotics_labs/my_CAD/shoulder.stl" scale="0.01 0.01 0.01"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.5"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
      </inertial>
    </link>

    <!-- Fixed joint to leg -->
    <joint name="${prefix}_shoulder2_joint" type="fixed">
      <parent link="${prefix}_shoulder"/>
      <child link="${prefix}_leg"/>
      <origin xyz="0 -0 -0.1"/>
    </joint>

    <link name="${prefix}_leg">
      <visual>
        <geometry>
          <cylinder radius="0.0125" length="0.1"/>
        </geometry>
        <origin xyz="0 0 0.005"/>
        <material name="silver"><color rgba="0.75 0.75 0.75 1"/></material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.01" length="0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
      </inertial>
    </link>

    <!-- Prismatic suspension -->
    <joint name="${prefix}_suspention_ext_joint" type="prismatic">
      <parent link="${prefix}_leg"/>
      <child link="${prefix}_leg_ext"/>
      <origin xyz="0 0.0 0"/>
      <axis xyz="0 0 -1"/>
      <limit lower="0.0" upper="0.075" effort="100" velocity="10"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <link name="${prefix}_leg_ext">
      <visual>
        <geometry>
          <cylinder radius="0.0075" length="0.1"/>
        </geometry>
        <origin xyz="0 0.0 0.0"/>
        <material name="silver"><color rgba="0.75 0.75 0.75 1"/></material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.01" length="0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
      </inertial>
    </link>

    <!-- Foot pitch -->
    <joint name="${prefix}_foot_joint_pitch" type="revolute">
      <parent link="${prefix}_leg_ext"/>
      <child link="${prefix}_foot_r"/>
      <origin xyz="0 0 -0.05"/>
      <axis xyz="0 1 0"/>
      <limit lower="0" upper="${pi/3}" effort="100" velocity="1.0"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <link name="${prefix}_foot_r">
      <visual>
        <geometry>
          <sphere radius="0.01"/>
        </geometry>
        <origin xyz="0 0.0 0"/>
        <material name="silver"><color rgba="0.75 0.75 0.75 1"/></material>
      </visual>
      <collision>
        <geometry>
          <sphere radius="0.01"/>
        </geometry>
        <origin xyz="0 0 0"/>
      </collision>
      <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
      </inertial>
    </link>

    <!-- Foot roll -->
    <joint name="${prefix}_foot_joint_roll" type="revolute">
      <parent link="${prefix}_foot_r"/>
      <child link="${prefix}_foot"/>
      <origin xyz="0 0 0"/>
      <axis xyz="1 0 0"/>
      <limit lower="${-pi/8}" upper="${pi/8}" effort="100" velocity="1.0"/>
      <dynamics damping="0.1" friction="0.1"/>
    </joint>

    <link name="${prefix}_foot">
      <visual>
        <geometry>
          <cylinder radius="0.015" length="0.15"/>
        </geometry>
        <origin xyz="0.05 0.0 -0.01875" rpy="0 ${-pi/2} 0"/>
        <material name="silver"><color rgba="0.75 0.75 0.75 1"/></material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.015" length="0.15"/>
        </geometry>
        <origin xyz="0.05 0.0 -0.025"/>
      </collision>
      <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
      </inertial>
    </link>
  </xacro:macro>

  <!-- ================= Instantiate Legs ================= -->
  <xacro:leg prefix="rf" x="0" y="0.125"/>
  <xacro:leg prefix="rr" x="0" y="-0.125"/>
  <xacro:leg prefix="lf" x="-0.15" y="0.125"/>
  <xacro:leg prefix="lr" x="-0.15" y="-0.125"/>

</robot>